<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.lotus_projeto_integrador.lotus.LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></GridLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/logo_lotus"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editUsuario"
        android:layout_gravity="center"
        android:hint="UsuÃ¡rio"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:textColorHint="#26a69a"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editSenha"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:paddingBottom="15dp"
        android:hint="Senha"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:textColorHint="#26a69a"
        android:requiresFadingEdge="horizontal"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btnValidar"
        android:backgroundTint="#009688"
        android:singleLine="false"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:src="@drawable/ic_entrar"/>

</LinearLayout>
